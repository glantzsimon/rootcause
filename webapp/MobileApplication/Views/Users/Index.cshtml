@using K9.SharedLibrary.Models
@using EButtonType = K9.SharedLibrary.Models.EButtonType
@model User
@{
    Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
}

@Html.BootstrapTable(new DataTableOptions<User>
{
    VisibleColumns = new List<string>
    {
        "FullName",
        "Username",
        "BirthDate",
        "EmailAddress",
        "PhoneNumber",
        "IsUnsubscribed"
    },
    CustomButtons = new List<IButton>
    {
        new Button
        {
            Action = "assign-credits/start",
            Controller = "Users",
            Text = "Assign Credits",
            ButtonType = EButtonType.Success
        },
        new Button
        {
            Action = "assign-membership/start",
            Controller = "Users",
            Text = "Assign Membership",
            ButtonType = EButtonType.Success
        },
        new Button
        {
            Action = "assign-promocode/start",
            Controller = "Users",
            Text = "Assign Promo Code",
            ButtonType = EButtonType.Success
        },
        new Button
        {
            Action = "viewaccount",
            Controller = "Users",
            Text = "View Account Details",
            ButtonType = EButtonType.Info
        }
    }
})