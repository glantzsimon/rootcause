@{
    Layout = "~/Views/Shared/_LayoutFormMaster.cshtml";
}
@section formLayout
{
    <div class="page shadow alphaBackground roundCorners default-form">
        @if (!string.IsNullOrEmpty(ViewBag.SubTitle))
        {
            <div class="page-header @ViewBag.TitleTag">
                <h1><strong>@Html.Raw(ViewBag.SubTitle)</strong></h1>
            </div>
        }
        @RenderBody()
    </div>
}

@section headerscripts {
    @RenderSection("headerscripts", false)
}

@section scripts {
    @RenderSection("scripts", false)
}