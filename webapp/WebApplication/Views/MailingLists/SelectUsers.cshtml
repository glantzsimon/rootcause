@using K9.Base.WebApplication.Helpers
@model K9.WebApplication.Models.MailingListViewModel
@{
    Layout = "~/Views/Shared/_LayoutFormMedium.cshtml";
    ViewBag.Title = Dictionary.MailingLists;
    ViewBag.SubTitle = Dictionary.SelectUsers + $" for Mailing List '{Model.MailingList.Name}'";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    using (Html.BeginBootstrapForm())
    {
        @Html.HiddenFor(model => model.MailingList.Id)

        @Html.Partial("_SelectUsers")

        <br />
        @Html.BootstrapButton(K9.Base.Globalisation.Dictionary.Update, EButtonType.Submit, "fa-save")
        @Html.BootstrapBackToListButton()
    }
}