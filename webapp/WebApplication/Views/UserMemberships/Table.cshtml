@using K9.Base.WebApplication.Controllers
@using K9.Base.WebApplication.Helpers
@using K9.SharedLibrary.Authentication
@using K9.WebApplication.Config
@using SessionHelper = K9.WebApplication.Helpers.SessionHelper
@model UserMembership
@{
    Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
}
@Html.BootstrapTable(new DataTableOptions<UserMembership>
{
    AllowCreate = true,
    AllowEdit = true,
    AllowDelete = SessionHelper.CurrentUserIsAdmin(),
    ColumnsConfig = new ColumnsConfig
    {
        ColumnsToIgnore =
        {
            "IsActive" , "CostOfRemainingActiveSubscription"
        }
    },
    VisibleColumns = new List<string>
    {
        "UserName",
        "IsActive",
        "StartsOn",
        "EndsOn",
        "IsDeactivated",
        "MembershipOptionName"
    },
    Controller = "UserMemberships"
})