@using K9.WebApplication.Extensions
@using K9.WebApplication.Helpers
@model K9.WebApplication.Models.NineStarKiModel

@{
    ViewBag.Title = Dictionary.GetToTheRootKiCalculatorTitle;
    ViewBag.SubTitle = Dictionary.PersonalProfileCalculator;
    ViewBag.Keywords = Dictionary.GetToTheRootKiCalculatorKeywords;
    ViewBag.MetaDescription = Dictionary.GetToTheRootKiCalculatorMetaDescription;

    Layout = "../Shared/_LayoutFormMedium.cshtml";
}

@Html.Partial("_BetaPopup")

<div class="container main-content margin-bottom-0">
    <div class="col-md-3 col-sm-3 padding-0">
        @Html.Action("_CalculatorForm")
    </div>
    <div class="col-md-9 col-sm-9 padding-left-20-desktop padding-right-0 mobile panel-margin-top-20">
        @if (Model != null && Model.IsProcessed)
        {
            @Html.Partial("_ProfileOverview", Model)
        }
        else
        {
            <article>
                <div class="margin-bottom-20">
                    @Html.Panel("9 Star Ki Personal Chart", Dictionary.personal_chart, "chart")
                </div>
            </article>
        }
    </div>
</div>

@if (Model != null && Model.IsProcessed)
{
    <br />
    <article>
        @Html.Panel(Dictionary.PersonalChartDetails, Html.Partial("_ProfilePills", Model).ToString())
    </article>
}
else
{
    <hr class="margin-top-0" />
    @Html.Partial("_ButtonsFooter")
}