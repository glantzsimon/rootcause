@using K9.SharedLibrary.Extensions
@using K9.WebApplication.Options
@model K9.WebApplication.Models.MembershipModel
@{
    ViewBag.Title = ViewBag.Title ?? Dictionary.MembershipLabel;
    ViewBag.SubTitle = Dictionary.YourSelectedSubscription;
    Layout = "../Shared/_LayoutFormSmall.cshtml";
}

@Html.Partial("_PaymentsForm", new PaymentsOptions(
    Model.MembershipOption.Id,
    0,
    Model.SubscriptionPrice,
    Model.MembershipOption.GetSubscriptionDetails(),
    "",
    "Index", "Membership",
    Url.Action("PurchaseSuccess", "Membership"),
    Url.Action("Index", "Error"),
    Url.Action("ProcessPurchase", "Membership")
))