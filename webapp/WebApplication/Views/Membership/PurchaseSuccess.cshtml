@using K9.Base.WebApplication.Helpers
@model K9.WebApplication.ViewModels.MyAccountViewModel

@{
    ViewBag.Title = Dictionary.MembershipOptions;
    ViewBag.SubTitle = Dictionary.MembershipAssignedSuccess;
    Layout = "../Shared/_LayoutForm.cshtml";
    ViewBag.TitleTag = "text-center";
}

<div class="margin-bottom-10">
    @Html.Success(Dictionary.YouAreSignedUp)

    @Html.Partial("_RetrieveLast")

    <article>

        @if (Model.Consultations.Any())
        {
            <hr />

            <p class="text-center"><strong>@Dictionary.BookConsultationNowPrompt</strong></p>
            @Html.Partial("../Account/_UserConsultations", Model.Consultations)
        }

        <hr />

        <div class="text-center">
            @Html.BootstrapActionLinkButton(K9.Base.Globalisation.Dictionary.MyAccountTitle, "MyAccount", "Account", null, "fa fa-user-circle", EButtonClass.Large)
        </div>
    </article>
</div>