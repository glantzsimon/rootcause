@using Dictionary = K9.Base.Globalisation.Dictionary
@model K9.WebApplication.ViewModels.EmailPromoCodeViewModel
@{
    ViewBag.Title = K9.Globalisation.Dictionary.EmailPromoCode;
    ViewBag.SubTitle = K9.Globalisation.Dictionary.EmailPromoCode;
    Layout = "~/Views/Shared/_LayoutFormSmall.cshtml";
}

@using (Html.BeginForm())
{
    using (Html.BeginBootstrapForm())
    {
        @Html.HiddenFor(model => model.Promotion.MembershipOptionId)
        @Html.HiddenFor(model => model.Promotion.Id)
        @Html.HiddenFor(model => model.Promotion.Code)
        @Html.HiddenFor(model => model.Promotion.UsedOn)
        @Html.HiddenFor(model => model.Promotion.SentOn)
        
        @Html.HiddenFor(model => model.Promotion.MembershipOption.Id)
        @Html.HiddenFor(model => model.Promotion.MembershipOption.Name)
        @Html.HiddenFor(model => model.Promotion.MembershipOption.Price)
        @Html.HiddenFor(model => model.Promotion.MembershipOption.SubscriptionType)
        @Html.HiddenFor(model => model.Promotion.MembershipOption.SubscriptionDetails)

        <div class="row">
            <div class="col-sm-6 col-xs-12">
                @Html.BootstrapDisplayFor(model => model.Promotion.Code)
            </div>
            <div class="col-sm-6 col-xs-12">
                @Html.BootstrapDisplayFor(model => model.Promotion.SubscriptionTypeName)
            </div>
        </div>
        @Html.BootstrapEditorFor(model => model.Name)
        @Html.BootstrapEditorFor(model => model.EmailAddress)
        <hr />
        @Html.BootstrapActionLinkButton(Dictionary.BackToList, "Index", "PromoCodes", null, "fa-chevron-left")
        @Html.BootstrapButton(K9.Globalisation.Dictionary.Send, EButtonType.Submit, "fa fa-envelope")
    }
}